{
  "version": "0.1",
  "scripts": [
    {
      "documentation": {
        "command": "data-diff",
        "description": "A data diff will be taken of the data resulting from a grep on each file. Parameters:\n  config: the config file to use\n",
        "arguments": ["config"]
      },
      "environment": {
        "image": "ubuntu",
        "interactive": false,
        "script": "virtuoso/data-diff.sh",
        "join_networks": true
      },
      "mounts": {
          "app": "/project/"
        }
    },
    {
      "documentation": {
        "command": "dump-database",
        "description": "A virtuoso dump will be created db/dumps.\n Parameters:\n  hostname: default triplestore\n  username: default dba\n  password: default dba",
        "arguments": ["hostname", "username", "password"]
      },
      "environment": {
        "image": "redpencil/virtuoso",
        "interactive": false,
        "script": "virtuoso/dump-database.sh",
        "join_networks": true
      },
      "mounts": {
          "app": "/project/"
        }
    }
  ]
}
